<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cyberlink.facemedemo.ui.AutoFitTextureView
        android:id="@+id/cameraPreviewView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:ignore="RelativeOverlap" />

    <com.mirobotic.facematcher.view.FaceView
        android:id="@+id/faceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/cameraPreviewView"
        android:layout_alignEnd="@id/cameraPreviewView"
        android:layout_alignTop="@id/cameraPreviewView"
        android:layout_alignBottom="@id/cameraPreviewView" />

    <!-- Bottom -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/faceList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/face_list_width"
        android:layout_alignParentBottom="true"
        android:background="@color/black_alpha"
        tools:listitem="@layout/view_face_item" />

    <!-- Top Left -->
    <TextView
        android:id="@+id/txtStat"
        style="@style/CLStatView"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="-6dp"
        android:alpha="0" />


    <!-- Top Right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <ImageSwitcher
            android:id="@+id/btnCamera"
            style="@style/CLIconImageView"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_front" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_rear" />
        </ImageSwitcher>

    </LinearLayout>




    <TextView
        android:id="@+id/tvName"
        android:textColor="@color/colorAccent"
        android:gravity="center_horizontal"
        android:textSize="21sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.mirobotic.facematcher.view.MaskView
        android:id="@+id/layoutUserInteractionMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/cameraPreviewView"
        android:layout_alignEnd="@id/cameraPreviewView"
        android:layout_alignTop="@id/cameraPreviewView"
        android:layout_alignBottom="@id/cameraPreviewView"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layoutUserInteraction"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/uad_component_edge"
        android:layout_alignLeft="@id/cameraPreviewView"
        android:layout_alignRight="@id/cameraPreviewView"
        android:layout_marginBottom="@dimen/uad_component_margin_bottom"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible">
        <TextView
            android:id="@+id/txtUserActionMessage"
            style="@style/UserAction"
            android:layout_centerInParent="true"
            tools:text="Verified Pass"/>
        <TextView
            android:id="@+id/txtUserActionIndicator"
            style="@style/UserAction.Indicator"
            android:layout_alignLeft="@id/txtUserActionMessage"
            tools:text="O"/>
    </RelativeLayout>

    <ImageView
        android:src="@drawable/ic_face"
        android:id="@+id/imgShowFaces"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</RelativeLayout>
