<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/face_list_width"
    android:padding="@dimen/face_border_width">

    <ImageView
        android:id="@+id/collectionThumb"
        android:layout_width="@dimen/face_thumbnail_size"
        android:layout_height="@dimen/face_thumbnail_size"
        android:layout_marginStart="2dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_face_n"/>

    <TextView
        android:id="@+id/collectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/collectionThumb"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:text="Steve Jobs"/>

    <TextView
        android:id="@+id/collectionInfo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/collectionThumb"
        android:layout_below="@id/collectionName"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        tools:text="collectionId:1\tfaceId:2"/>

    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="6dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/listview_divider"/>
</RelativeLayout>